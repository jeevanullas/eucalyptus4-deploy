#####################################################################################
#
# Eucalyptus 4 - Deploy with Ansible
#

#####################################################################################
## VARIABLES DEFINITIONS ##
# Recommended changes :
# - vlan_iface : NIC where VLAN gets created
# - vlan_ip : IP assigned to VLAN Iface
# - vlan_gw : VLAN Subnet's GW
# - partition : name of the AZ

#####################################################################################
# CLC HOST - UNIQUE !!
#
[clc]
odc-c-32

[clc:vars]
vlan_ip=172.33.0.32

#####################################################################################
# WALRUS - UNIQUE !!
#
[walrus]
odc-c-33

[walrus:vars]
walrus_name="walrus-prc"
vlan_ip=172.33.0.33

#####################################################################################
# User Facing Services - ufs_name MUST BE UNIQUE
#
[ufs]
odc-c-33 ufs_name=PRC-01 vlan_ip=172.33.0.33

#####################################################################################
# CC definition - Change name as pleases
# cc_name MUST BE UNIQUE | 1 CC per name
#
[cc-prc-01]
odc-c-34 cc_name=cc-prc-01 vlan_ip=172.33.0.34

#####################################################################################
# Storage Controllers
# sc_name MUST BE UNIQUE
#
[sc-prc-01]
odc-c-34 sc_name=sc-prc-01 vlan_ip=172.33.0.34


#####################################################################################
# Node Controllers
#
[nc-prc-01]
odc-c-35 vlan_ip=172.33.0.35
odc-c-36 vlan_ip=172.33.0.36
odc-c-39 vlan_ip=172.33.0.39


#####################################################################################
# Front-End Services
# CLC / UFS / Walrus (JAVA Components)
#
[java_fe:children]
clc
ufs
walrus
sc

[java_fe:vars]
java_iface=em2.1000
vlan_iface=em2
vlan_tag=1000

#####################################################################################
# Cluster Controllers
# Allows to manage CC tasks for any AZ cluster | CHANGE only if needed
#
[cc:children]
cc-prc-01

[cc:vars]
vnet_public=em1
vnet_bridge=false
vnet_private=em2

#####################################################################################
# Node Controllers
# Allows to manage NCs tasks for any Node | CHANGE name only if needed
#

[nc:children]
nc-prc-01

[nc:vars]
vnet_public=em1
vnet_private=em2
bridge_prefix=eucabr
bridge_id=1

#####################################################################################
# Storage Controllers
# Allows to manage SC tasks for any AZ cluster | CHANGE only if needed
#

[sc:children]
sc-prc-01

[sc:vars]

#####################################################################################
# CLUSTER DEFINITION
# Allow to define values global to the cluster, such as VLAN TAG or partition name | CHANGE NAME ONLY
# MANDATORY to keep CC/SC/NC to form a complete cluster
#

[prc01:children]
cc-prc-01
sc-prc-01
nc-prc-01

[prc01:vars]
partition=prc-01
vlan_tag=1000
vlan_iface=em2

#####################################################################################
# ALL CLUSTERS AS ONE
#

[clusters:children]
prc01

[clusters:vars]

